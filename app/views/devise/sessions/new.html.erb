<h2 class="title is-2">Log in</h2>
<div class="columns is-mobile">
  <div class="column is-one-third">
    <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
      <div class="field">
        <%= f.label :email, class: "label" %>
        <div class="control">
          <%= f.email_field :email, class: "input is-primary", autocomplete: "email" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <div class="control">
          <%= f.password_field :password, class: "input is-primary", autocomplete: "new-password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="field">
        <div class="control actions">
          <%= f.submit "Log in", class: "button is-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
